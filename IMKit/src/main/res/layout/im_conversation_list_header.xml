<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/rc_header_order"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/rc_header_order_left"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp">

            <io.rong.imkit.widget.AsyncImageView
                android:id="@+id/rc_header_order_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:RCCornerRadius="3dp"
                app:RCDefDrawable="@drawable/hwl_order_message_icon"
                app:RCShape="square" />

            <FrameLayout
                android:id="@+id/rc_header_order_unread_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rc_header_order_unread_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/rc_header_order_unread_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </FrameLayout>
        </FrameLayout>

        <io.rong.imkit.widget.ProviderContainerView
            android:id="@+id/rc_header_order_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rc_header_order_left"
            android:background="@android:color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/rc_conversation_list_divider_color" />
    </RelativeLayout>
