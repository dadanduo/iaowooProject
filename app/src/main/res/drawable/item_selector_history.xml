<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="#9e9e9e"></stroke>
            <solid android:color="@color/white"></solid>
            <corners android:radius="5dp"></corners>
            <padding android:bottom="1dp" android:left="6dp" android:right="6dp" android:top="4dp"></padding>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="#9e9e9e"></stroke>
            <solid android:color="@color/white"></solid>
            <corners android:radius="5dp"></corners>
            <padding android:bottom="4dp" android:left="6dp" android:right="6dp" android:top="4dp"></padding>
        </shape>
    </item>
</selector>