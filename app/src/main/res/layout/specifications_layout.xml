<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guige_all"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_height="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_126">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/prices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#e02c1f"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:id="@+id/choose_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222222"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/close"
                    android:layout_width="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/dp_30">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/choose_specifications_close_icon"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_30"
                android:background="#f6f6f6"/>

            <LinearLayout
                android:id="@+id/one_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="12sp"
                    />

                <com.iaowoo.mobile.Ui.classification.View.FlowLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="wrap_content">

                </com.iaowoo.mobile.Ui.classification.View.FlowLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/two_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="12sp"
                    />
                <com.iaowoo.mobile.Ui.classification.View.FlowLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="wrap_content">

                </com.iaowoo.mobile.Ui.classification.View.FlowLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/three_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tree_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:textSize="12sp"
                    />
                <com.iaowoo.mobile.Ui.classification.View.FlowLayout
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="wrap_content">

                </com.iaowoo.mobile.Ui.classification.View.FlowLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_85"
                android:layout_marginTop="@dimen/dp_17">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"
                    />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_88"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/jian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/jian"
                        android:clickable="false"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/subtract_number_icon"/>

                    </RelativeLayout>
                    <FrameLayout
                        android:id="@+id/edite_numbers"
                        android:layout_width="0dp"
                        android:background="@drawable/center"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:id="@+id/show_text_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="1"/>

                        <EditText
                            android:id="@+id/show_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textColor="#00000000"
                            android:maxLength="6"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:inputType="number"
                            android:textSize="13sp"
                            />

                    </FrameLayout>
                    <RelativeLayout
                        android:id="@+id/add_btm"
                        android:layout_width="0dp"
                        android:background="@drawable/add"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/add_number_icon"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_106"
            android:layout_height="@dimen/dp_106"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/shop_m">
            <ImageView
                android:id="@+id/shop_image"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="match_parent"
                />

        </RelativeLayout>


        <Button
            android:id="@+id/show_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@mipmap/determine_gradient_bt"/>
        <LinearLayout
            android:id="@+id/show_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/add_car_goods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/choose_add_cart_bt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:text="加入购物车"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/buy_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/choose_buy_bt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:text="立即购买"/>

            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
