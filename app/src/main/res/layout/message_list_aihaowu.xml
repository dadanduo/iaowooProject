<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0eff4"
        android:orientation="vertical">
        <include layout="@layout/immersionandroid"/>
        <include layout="@layout/layout_titlebar"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/d_d"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/dp_52">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:id="@+id/d_d_click"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hwl_order_message_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="订单消息"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/d_d_number_message"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@color/andoridMain"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:id="@+id/j_y"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hwl_trade_message_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="交易消息"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/j_y_number_message"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@color/andoridMain"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:id="@+id/x_t"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hwl_system_message_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="系统消息"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/x_t_number_message"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@color/andoridMain"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="#eeeeee"/>
        <RelativeLayout
            android:id="@+id/g_g"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hwl_notice_message_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="公告消息"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/g_g_number_message"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@color/andoridMain"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="#eeeeee"/>

        <RelativeLayout
            android:id="@+id/k_f"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hwl_customer_message_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="客服消息"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/k_f_number_message"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@color/andoridMain"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
