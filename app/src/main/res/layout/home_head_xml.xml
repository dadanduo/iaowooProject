<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/mcb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_163">

    </com.bigkoo.convenientbanner.ConvenientBanner>

    <View
        android:layout_width="match_parent"
        android:background="@color/qianhuise"
        android:layout_height="0.5dp"/>

    <ImageView
        android:id="@+id/imge_z_q_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <View
        android:id="@+id/view_z_q_1"
        android:layout_width="match_parent"
        android:background="@color/qianhuise"
        android:visibility="gone"
        android:layout_height="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iaowoo.mobile.Ui.classification.View.recyclerview.PageGridView
            android:id="@+id/cusom_swipe_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:PagingColums="0"
            app:PagingDiver="@null"
            app:PagingRows="1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_magin_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="@dimen/dp_77"
            android:background="#C2C0C0"
            android:layout_centerInParent="true"
            android:layout_height="3dp">
            <View
                android:layout_width="@dimen/dp_38"
                android:layout_height="match_parent"
                android:background="#FDD22B"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/line_magin_right"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="@dimen/dp_77"
            android:background="#C2C0C0"
            android:layout_centerInParent="true"
            android:layout_height="3dp">
            <View
                android:layout_width="@dimen/dp_38"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#FDD22B"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/qianhuise"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:id="@+id/backgroud_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/five_click"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/chi_huo_jie"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/liang_dian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/gu_wan_cheng"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/wang_hong_jie"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/back_imge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </FrameLayout>



    <RelativeLayout
        android:id="@+id/msg_re"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@mipmap/information_announcement_icon"
                android:layout_centerVertical="true"
                />

            <com.iaowoo.mobile.Ui.classification.View.TextviewRount.TextViewSwitcher
                android:id="@+id/msg_Text"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/every_day_s_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_16"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_recommend_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="#333333"
                android:textSize="18sp"
                android:text="每日推荐"/>

        </LinearLayout>
        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colortabletxt"
            android:text="距离本场结束：04:05:16"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textSize="12sp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hor"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:background="#f5f5f5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <!--<com.example.library.banner.BannerLayout-->
            <!--android:id="@+id/mcb2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="86dp"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->
            <!--android:layout_marginBottom="@dimen/dp_5"-->
            <!--app:autoPlaying="false"-->
            <!--app:centerScale="1"-->
            <!--app:itemSpace="10"-->
            <!--app:moveSpeed="1"/>-->

            <!--<com.iaowoo.mobile.Ui.classification.View.gallerlib.GallerViewPager-->
            <!--android:id="@+id/mcb2"-->
            <!--android:clipChildren="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="86dp"-->
            <!--android:background="#ffffff" />-->

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/mcb2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_86"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@drawable/allboild"
                >

            </com.bigkoo.convenientbanner.ConvenientBanner>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:background="#f5f5f5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/see_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_12"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/home_spell_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱拼团"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/dp_125"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:src="@mipmap/group_buying_recommended"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="查看全部"
                        android:textColor="#7e7d7d"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/home_spell_more_icon"/>
                </LinearLayout>


            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/pin_recycle"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:background="#f5f5f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/earth_all_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:elevation="10dp"
                >
                <ImageView
                    android:id="@+id/quan_qiu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/home_background_global_market"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/home_radio_new"
                    android:elevation="5dp"
                    android:layout_marginTop="@dimen/dp_75"
                    android:layout_marginBottom="@dimen/dp_5"

                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/all_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_2"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/qianhuise"
            android:visibility="gone"
            android:layout_height="@dimen/dp_10"/>
        <FrameLayout
            android:id="@+id/china_goods_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/china_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/home_background_chinese_goods"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/home_radio_new"
                android:elevation="5dp"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_75"
                android:layout_marginBottom="@dimen/dp_5"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/chinaGoodshops"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#f6f6f6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为您推荐"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@mipmap/recommended_for_you"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
