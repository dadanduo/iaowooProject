<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/immersionandroid"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_52">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/searches"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/search_icon"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_marginRight="15dp"
                android:layout_weight="8"
                android:background="#ffffff"
                android:layout_margin="@dimen/dp_2"
                android:layout_height="wrap_content">



                <com.iaowoo.mobile.Ui.classification.View.EditText_Phone
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入您想搜索的商品"
                    android:textSize="@dimen/dp_12"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/marge_3333"
                    android:textColorHint="#b9b9b9"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/cancel_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:layout_marginRight="@dimen/dp_12"
                android:text="取消"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colortabletxt"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_one"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_16"
                android:layout_centerInParent="true"
                android:textColor="@color/colortabletxt"
                android:text="搜索"/>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近搜索"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_19"
        android:textSize="@dimen/dp_16"/>
    <TextView
        android:id="@+id/search_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无搜索历史"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_19"
        android:textSize="@dimen/dp_12"/>


<com.iaowoo.mobile.Ui.classification.View.SearchTipsGroupView
    android:id="@+id/search_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</com.iaowoo.mobile.Ui.classification.View.SearchTipsGroupView>
</LinearLayout>
