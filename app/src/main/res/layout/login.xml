<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/close_aihaowu"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/close_red_packet_icon"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您好，请登录！"
                    android:textColor="#262626"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:textSize="30sp"
                    />
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/logo_main"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/marge_3333"
                            android:textSize="18dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/marge_3333"
                    android:textSize="17dp"
                    android:visibility="gone"
                    android:layout_marginLeft="16dp"
                    android:text="手机登录"/>


                <include layout="@layout/password_login"></include>
                <include layout="@layout/phone_login"></include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/updatepassword"
                        android:onClick="updatepassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/dp_15"
                        android:textColor="@color/colortabletxt"
                        android:text="切换成密码登录>>"/>


                </RelativeLayout>

                <CheckBox
                    android:id="@+id/chbAgree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="记住密码"
                    android:visibility="gone"
                    android:checked="false"/>
                <Button
                    android:id="@+id/login_in"
                    android:onClick="login_in"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="@dimen/login_o"
                    android:layout_marginRight="@dimen/login_o"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:text="登录"
                    android:alpha="0.5"
                    android:textSize="@dimen/btn_size"
                    android:enabled="false"
                    android:textColor="@color/colorwhite"
                    android:background="@drawable/zhu_che_and_login"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_22"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/signup"
                        android:onClick="signup"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#f46a21"
                        android:text="账号注册>"/>

                    <TextView
                        android:id="@+id/forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  |  忘记密码>"
                        android:textColor="#f46a21"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/the_third_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_12"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colornoselect" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#999999"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginRight="@dimen/dp_12"
                                android:text="第三方登录"
                                android:textSize="@dimen/dp_14"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colornoselect" />


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/woshuai"
                            android:layout_width="50dp"
                            android:layout_centerInParent="true"
                            android:layout_height="@dimen/dp_50"
                            android:src="@mipmap/worldshine_logo"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_12"
                            android:layout_centerInParent="true"
                            android:textColor="#666666"
                            android:text="沃帅商城"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/line_num"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center"
                        android:background="@color/colornoselect"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="第三方账号登录"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/colorBlack"
                        ></TextView>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/line_num"
                        android:layout_weight="1"
                        android:layout_marginRight="12dp"
                        android:layout_gravity="center"
                        android:background="@color/colornoselect"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_num"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</ScrollView>
