<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f5f5f5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/pay_success_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="商家正在努力发货，请耐心等待!"
            android:layout_gravity="center_horizontal"
            android:textColor="#909090"
            android:textSize="12sp"
            />

        <RelativeLayout
            android:id="@+id/zai_gaung_g"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/zhu_che_and_login"
            android:layout_marginRight="@dimen/dp_36">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:text="再去逛逛"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f8f8f8"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品订单："
                android:textColor="#999999"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/shang_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额："
                android:textColor="#999999"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/xiao_fei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返现红包："
                android:textColor="#999999"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/fan_xian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分:"
                android:textColor="#999999"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/ji_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#f8f8f8"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/dp_50"
            >

            <View
                android:layout_width="@dimen/dp_128"
                android:background="#d8d8d8"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_toLeftOf="@+id/for_you_ok"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/for_you_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为您推荐"
                android:textColor="#555555"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                />
            <View
                android:layout_width="@dimen/dp_128"
                android:background="#d8d8d8"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@+id/for_you_ok"
                android:layout_height="2dp"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
