<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_radio"
    android:id="@+id/for_you_click"
    android:layout_margin="@dimen/dp_2"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        />
    <TextView
        android:id="@+id/descridb_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="#666666"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="12sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥3576"
            android:textColor="#d63539"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="13sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_12"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/integral_icon" />

            <TextView
                android:id="@+id/integral_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                android:textColor="@color/colortabletxt"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/ok_ok"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:textColor="#989898"
            android:textSize="9sp"
            />
    </RelativeLayout>

</LinearLayout>
