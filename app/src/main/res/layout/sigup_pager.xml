<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_login_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/back_aihaowu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/retrun"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写以下信息完成注册！"
        android:layout_marginTop="@dimen/dp_60"
        android:textColor="#262626"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="30sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_marginLeft="18dp"
            android:text="手机号："/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/log_account_icon"/>
        <com.iaowoo.mobile.Ui.classification.View.EditText_Phone
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/signup_phone_input"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="请输入手机号码"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_15"
            android:background="@null"
            android:layout_marginRight="18dp"
            android:drawableRight="@mipmap/black_close_icon"  />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colornoselect"
        android:layout_marginTop="5dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/log_password_icon"/>

        <com.iaowoo.mobile.Ui.classification.View.EditText_Phone
            android:id="@+id/edite_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:textSize="14dp"
            android:hint="请输入登录密码"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:maxLength="20"
            android:background="@null"
            android:drawableRight="@mipmap/black_close_icon"
            android:layout_marginLeft="12dp"
            />

    </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@color/colornoselect"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/code_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            android:visibility="gone"
            android:textSize="14dp"
            android:layout_marginLeft="18dp"
            android:text="验证码："/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/log_password_icon"/>

        <com.iaowoo.mobile.Ui.classification.View.EditText_Phone
            android:id="@+id/signup_validation_code"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_50"
            android:textSize="14dp"
            android:hint="请输入验证码"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:maxLength="8"
            android:background="@null"
            android:drawableRight="@mipmap/black_close_icon"
            android:layout_marginLeft="12dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_29"
                android:background="#dcdcdc"/>
            <TextView
                android:id="@+id/signup_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:textColor="#F46A21"
                android:textSize="@dimen/dp_16"
                android:text="获取验证码"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@color/colornoselect"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:visibility="gone"
            android:textSize="14dp"
            android:text="邀请码："/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/log_invitation_icon"/>
        <com.iaowoo.mobile.Ui.classification.View.EditText_Phone
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/invite_code"
            android:inputType="text"
            android:maxLength="8"
            android:hint="请输入邀请码"
            android:textSize="14dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginRight="18dp"
            android:drawableRight="@mipmap/black_close_icon"  />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@color/colornoselect"
        />

</LinearLayout>
