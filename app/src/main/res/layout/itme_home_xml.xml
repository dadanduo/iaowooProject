<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/home_item"
    android:background="@drawable/home_radio"
    >
    
    <ImageView
        android:id="@+id/image_home"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="185dp" />
    <TextView
        android:id="@+id/show_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:textColor="@color/marge_3333"
        android:textSize="13sp"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/price_this"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:text=""
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/seld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colortabletxt"
            android:text=""
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="12sp"/>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/pg_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:text="2人拼单"/>
                
                <RelativeLayout
                    android:layout_width="@dimen/dp_77"
                    android:layout_height="@dimen/dp_29"
                    android:background="@drawable/pg"
                    android:layout_marginLeft="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去拼单"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@mipmap/white_right_arrow"/>
                    </LinearLayout>
                </RelativeLayout>
                
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
