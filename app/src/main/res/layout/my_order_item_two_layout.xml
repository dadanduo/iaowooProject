<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f6f6"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="@dimen/dp_86"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_height="@dimen/dp_86" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/describe_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple iPhone 8 Plus(A1864)64GB 金色 移动联通电信4G手机"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_13"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/gui_ge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色:标准黑"
                android:textColor="#909090"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="12sp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23">

                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥5980/件"
                    android:layout_centerVertical="true"
                    android:textColor="#d63539"
                    android:textSize="14sp"
                    />
                
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_88"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/jian_two"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/jian"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/subtract_number_icon"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:background="@drawable/center"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/show_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#101010"
                            android:layout_centerInParent="true"
                            android:textSize="13sp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/add_btm_two"
                        android:layout_width="0dp"
                        android:background="@drawable/add"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/add_number_icon"/>
                    </RelativeLayout>

                </LinearLayout>
                
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
