<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/password_forget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:textSize="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:hint="请输入密码"
        android:layout_centerVertical="true"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_marginRight="@dimen/login_o"
        android:layout_marginLeft="@dimen/login_o"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginRight="@dimen/login_o"
        android:layout_marginLeft="@dimen/login_o"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/line"
        />
    <EditText
        android:id="@+id/reset_password_forget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/dp_15"
        android:hint="请再次确认密码"
        android:layout_centerVertical="true"
        android:background="@null"
        android:inputType="textPassword"
        android:layout_marginRight="@dimen/login_o"
        android:layout_marginLeft="@dimen/login_o"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginRight="@dimen/login_o"
        android:layout_marginLeft="@dimen/login_o"
        android:background="@color/line"
        android:layout_marginTop="@dimen/dp_8"

        />

    <Button
        android:id="@+id/password_ok_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/determine_gradient_bt"
        android:textColor="@color/colorwhite"
        android:textSize="14dp"
        android:enabled="false"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="确定"/>

</LinearLayout>
