<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bri_bg"
    android:layout_width="227dp"
    android:layout_height="84dp"
    android:background="@drawable/im_red_bg_left">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" >

        <ImageView
            android:id="@+id/iv_bri_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chat_send_red_envelope_icon" />

        <LinearLayout
            android:id="@+id/ll_bri_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_bri_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bri_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜发财，大吉大利！"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bri_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领取红包"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:paddingLeft="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_bri_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包"
            android:textColor="@android:color/darker_gray"
            android:textSize="9sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_6"
            android:src="@mipmap/chat_send_logo_icon" />
    </RelativeLayout>
</RelativeLayout>


