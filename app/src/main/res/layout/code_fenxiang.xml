<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="435dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105"
            android:background="@mipmap/code_background">

            <ImageView
                android:id="@+id/shen_fen_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/mine_level_farmer_icon"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Top_headIcon"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_color="#F3F3F3"
                    app:civ_border_width="1dp"/>

                <TextView
                    android:id="@+id/name_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/code">

            <ImageView
                android:id="@+id/code_two_image"
                android:layout_width="228dp"
                android:layout_height="228dp"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫，注册成为我的客户"
                android:textColor="#7c838d"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
