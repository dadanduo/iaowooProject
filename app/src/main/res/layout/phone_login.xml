<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_login_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginTop="@dimen/dp_50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_21"
            android:src="@mipmap/log_account_icon"/>
        <com.iaowoo.mobile.Ui.classification.View.EditText_Phone
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/phone_input"
            android:inputType="phone"
            android:hint="输入手机号码"
            android:textSize="@dimen/dp_15"
            android:maxLength="11"
            android:layout_marginLeft="@dimen/login_o"
            android:background="@null"
            android:textColor="@color/txt_666666"
            android:layout_marginRight="@dimen/login_o"
            android:drawableRight="@mipmap/black_close_icon"  />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginLeft="@dimen/login_o"
        android:layout_marginRight="@dimen/login_o"
        android:background="@color/colornoselect"
        android:layout_marginTop="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_21"
            android:src="@mipmap/log_password_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/validation_code"
                android:layout_width="200dp"
                android:layout_height="@dimen/dp_50"
                android:textSize="@dimen/dp_15"
                android:hint="验证码"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="8"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="@dimen/login_o"
                />
            <TextView
                android:id="@+id/get_code"
                android:onClick="get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_666666"
                android:textSize="@dimen/dp_15"
                android:layout_marginRight="@dimen/login_o"
                android:text="获取验证码"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_num"
        android:layout_marginLeft="@dimen/login_o"
        android:layout_marginRight="@dimen/login_o"
        android:layout_marginTop="12dp"
        android:background="@color/colornoselect"
        />

</LinearLayout>
