<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_9"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:id="@+id/activity_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_11"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_13"
            android:background="@drawable/order">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:textColor="#ed2806"
                android:layout_centerInParent="true"
                android:textSize="8sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="#666666"
            android:textSize="11sp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_item_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/you_hui_quan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择优惠券"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#444444"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/youhuiquan_max_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D63539"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"
                android:layout_marginRight="@dimen/dp_11"
                />
            <TextView
                android:id="@+id/you_hui_quan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"
                android:layout_marginRight="@dimen/dp_11"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/goods_right_icon"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:id="@+id/red_bao"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="红包"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#444444"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/red_bao_max_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D63539"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"
                android:layout_marginRight="@dimen/dp_11"
                />
            <TextView
                android:id="@+id/red_bao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"
                android:layout_marginRight="@dimen/dp_11"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/goods_right_icon"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5"/>

    <RelativeLayout
        android:id="@+id/baoshiquan"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="@dimen/dp_43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="宝石券"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#444444"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/baoshiquan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D63539"
                android:layout_gravity="center_vertical"
                android:textSize="11sp"
                android:layout_marginRight="@dimen/dp_11"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/goods_right_icon"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_9"
        android:background="#f5f5f5"/>
</LinearLayout>
