<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_image_comments"
                android:layout_width="25dp"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@mipmap/mine_default_avatar" />
        <TextView
            android:id="@+id/name_comment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#989898"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/describe_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_24"
        android:textColor="#ff555555"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:orientation="horizontal">
        <com.gui.ninegrideview.LGNineGrideView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grideView"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            app:singleImageRatio="0.7"
            app:singleImageRatioMode="@integer/SINGLE_IMAGE_MODE_SPECIFIED_RATIO"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a4a4a4"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_19"
        android:background="#f4f4f4"/>

</LinearLayout>
